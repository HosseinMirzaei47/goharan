<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Goharshad" parent="@android:style/Widget.Material" />

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="rippleColor">@color/light_turquoise</item>
        <item name="android:textColor">@color/global_text_color</item>
    </style>

    <style name="Widget.Goharshad.MaterialComponents.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.Design.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Base.Widget.Goharshad.Design.TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabRippleColor">@color/ocean_green</item>
    </style>

    <style name="Base.Widget.Goharshad.MaterialComponents.Chip" parent="Base.Widget.MaterialComponents.Chip">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.Design.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.MaterialComponents.BottomNavigationView.Colored" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="rippleColor">@color/light_turquoise</item>
        <item name="itemRippleColor">@color/ocean_green</item>
    </style>

    <style name="Widget.Goharshad.MaterialComponents.Button" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.MaterialComponents.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.MaterialComponents.TimePicker.ImageButton" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.MaterialComponents.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.MaterialComponents.Chip.Action" parent="Widget.MaterialComponents.Chip.Action">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.MaterialComponents.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.MaterialComponents.TextInputEditText.OutlinedBox" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.MaterialComponents.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.MaterialComponents.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.MaterialComponents.Button.TextButton.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <!-- Text Appearances -->
    <!-- For titles, e.g. toolbar -->
    <style name="TextAppearance.Goharshad.H1" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    <!-- For smaller titles, e.g. Tasks' titles -->
    <style name="TextAppearance.Goharshad.H2" parent="@style/TextAppearance.Goharshad.H1">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <!-- For other prominent text -->
    <style name="TextAppearance.Goharshad.H3" parent="@style/TextAppearance.Goharshad.H1">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Goharshad" parent="Widget.Goharshad.MaterialComponents.Button.OutlinedButton">
        <item name="android:clickable">false</item>
        <item name="cornerRadius">@dimen/_16sdp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Goharshad.TextInputLayout" parent="Widget.Goharshad.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/gs_color_surface</item>
        <item name="android:background">@drawable/text_input_layout_background</item>
        <item name="boxStrokeColor">@color/text_input_layout_border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/gs_secondary</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_medium</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="helperTextTextColor">?colorSecondary</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <!-- changes cursor color in textInputEditText -->
        <item name="colorControlActivated">@color/gs_secondary</item>
    </style>

    <style name="Widget.Goharshad.TextInputEditText" parent="Widget.Goharshad.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/common_inverse</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
    </style>

    <style name="Widget.Goharshad.Button">
        <item name="backgroundTint">@color/gs_blue</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>

    <style name="DeleteTaskDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/gs_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.Goharshad.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/ruby</item>
        <item name="rippleColor">@color/jazzberry_jam</item>
    </style>

    <style name="AlertTextButton" parent="Widget.Goharshad.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/ruby</item>
        <item name="rippleColor">@color/jazzberry_jam</item>
    </style>

    <style name="Widget.Goharshad.HorizontalLine">
        <item name="android:background">@drawable/bg_horizontal_line</item>
    </style>

    <style name="TasksBottomAppBar" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.Goharshad.Page.Title" parent="@style/TextAppearance.Goharshad.H2">
        <item name="android:textStyle">bold</item>
        <item name="color">@color/dark_header</item>
    </style>

    <style name="TextAppearance.Goharshad.Item.Title" parent="@style/TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.Goharshad.Common.Button" parent="Widget.Goharshad.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/common_button_bg</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/radius_normal</item>
        <item name="rippleColor">@color/light_turquoise</item>
    </style>

    <style name="Widget.Goharshad.Common.Button.Selected" parent="Widget.Goharshad.Common.Button">
        <item name="android:backgroundTint">@color/gs_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/darker_gray</item>
    </style>

    <style name="Widget.Goharshad.Common.TextInput" parent="Widget.Goharshad.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@color/gs_primary</item>
        <item name="boxStrokeColor">@color/text_input_layout_border</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/gs_secondary</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_large</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_large</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_large</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_large</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="helperTextTextColor">?colorSecondary</item>
        <item name="android:textColor">@color/pink_swan</item>
    </style>

    <style name="Widget.Goharshad.Common.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/radio_button_text_color</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radio_states</item>
        <item name="background">@drawable/radio_states</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="Goharshad.MaterialComponents.TextButton" parent="Widget.Goharshad.MaterialComponents.Button.TextButton">
        <item name="android:clickable">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dark_turquoise</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">@dimen/padding_eight</item>
        <item name="iconTint">@color/dark_turquoise</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>