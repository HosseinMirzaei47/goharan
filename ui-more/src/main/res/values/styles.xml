<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Goharshad.More.Button" parent="Widget.Goharshad.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/global_text_color</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="rippleColor">@color/gs_blue</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="Goharshad.More.Contact.Item.Title" parent="">
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@color/gs_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Goharshad.More.Contact.Item.Desc" parent="Goharshad.More.Contact.Item.Title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

</resources>