<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_micro"
        app:cardBackgroundColor="#f2f6ff"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/radius_large"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_small"
            android:background="#f2f6ff"
            android:backgroundTint="#f2f6ff"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_service_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:contentDescription="@string/todo"
                android:src="@drawable/bucket" />

            <TextView
                style="@style/TextAppearance.Goharshad.Item.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/margin_micro"
                android:text="@string/service_carpet_cleaning" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</layout>