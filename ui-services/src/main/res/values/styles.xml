<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tasks -->
    <!-- Text Appearances -->
    <!-- For titles, e.g. toolbar -->

    <style name="TextAppearance.Goharshad.Task.Title" parent="@style/TextAppearance.Goharshad.H2">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Goharshad.Task.Description" parent="@style/TextAppearance.Goharshad.H3">
        <item name="android:alpha">.5</item>
        <item name="alpha">.5</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Goharshad.Category.Title" parent="@style/TextAppearance.Goharshad.H2">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Goharshad.Category.Description" parent="@style/TextAppearance.Goharshad.H3">
        <item name="android:alpha">.5</item>
        <item name="alpha">.5</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Goharshad.Services.Item.DueTime" parent="@style/TextAppearance.Goharshad.H3">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="TextAppearance.Goharshad.Services.NoTaskAlert" parent="@style/TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Goharshad.Services.Item.Description" parent="@style/TextAppearance.AppCompat">
        <item name="android:alpha">.5</item>
        <item name="alpha">.5</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/global_text_color</item>
    </style>

    <style name="TextAppearance.Goharshad.Task.NewTask.Title" parent="@style/TextAppearance.Goharshad.H1">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_create_task</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Goharshad.Task.NewTask.Subtitle" parent="@style/TextAppearance.Goharshad.H3">
        <item name="android:singleLine">true</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:textColor">@color/common_inverse</item>
    </style>

    <style name="Widget.Goharshad.Button">
        <item name="backgroundTint">@color/gs_secondary</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>

    <style name="Widget.Goharshad.CardView">
        <item name="backgroundTint">@color/ocean_green</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/radius_normal</item>
    </style>

    <style name="Button.TextIconButton.BottomSheet.Options" parent="@style/Widget.Goharshad.MaterialComponents.Button.TextButton.Icon">
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">@dimen/_16sdp</item>
        <item name="rippleColor">@color/ocean_green</item>
        <item name="android:textColor">@color/global_text_color</item>
        <item name="iconTint">@color/ocean_green</item>
    </style>

    <style name="Widget.Goharshad.VerticalLine">
        <item name="android:background">@drawable/bg_vertical_line</item>
    </style>

    <style name="Widget.Goharshad.TextInput" parent="@style/TextAppearance.Goharshad.H3">
        <item name="android:background">@drawable/bg_input_text</item>
        <item name="android:inputType">text</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/common_inverse</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Date Picker Style -->
    <style name="DateTimePickersStyle" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Only for date picker -->
        <item name="android:datePickerMode">calendar</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/datePickerDialogButtonBar</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/datePickerDialogButtonBar</item>

        <!-- Common for date picker and time picker -->
        <item name="android:windowBackground">@color/gs_color_surface</item>

        <!-- Date picker and time picker specific styles -->
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
        <item name="android:timePickerStyle">@style/TimePickerStyle</item>

        <!-- selected Item color for date picker -->
        <item name="colorControlActivated">@color/gs_secondary</item>
        <!-- day , month in date picker -->
        <item name="android:textColorPrimaryInverse">@color/gs_text_color_primary_inverse</item>
        <!-- year in date picker -->
        <item name="android:textColorSecondaryInverse">@color/gs_text_color_primary_inverse</item>

        <!-- Keeping for more customizations -->
        <!-- Highlight item color-->
        <!--
        <item name="colorControlHighlight">@color/gs_green</item>

        &lt;!&ndash; arrow bordercolor(<>)&ndash;&gt;
        <item name="android:selectableItemBackgroundBorderless">@android:color/holo_orange_dark
        </item>
        &lt;!&ndash; Week TextColor&ndash;&gt;
        <item name="android:textColorSecondary">#E91E63</item>
        &lt;!&ndash; Calender Number color arrow color (< >) &ndash;&gt;
        <item name="android:textColorPrimary">#3F51B5</item>
        -->

    </style>

    <style name="Widget.Goharshad.TextInputLayout.Dense">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense
        </item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <!-- changes cursor color in textInputEditText -->
        <item name="colorControlActivated">@color/gs_secondary</item>
    </style>

    <style name="Widget.Goharshad.TextInputLayout.WithoutBackground">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Goharshad.TextInputEditText" parent="Widget.Goharshad.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/common_inverse</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/gs_date_picker_header_background</item>
    </style>

    <style name="TimePickerStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/gs_date_picker_header_background</item>
        <item name="android:timePickerMode">clock</item>
        <item name="android:numbersBackgroundColor">@color/gs_primary</item>
        <item name="android:headerTimeTextAppearance">@style/timePickerHeaderTextAppearance</item>
    </style>

    <style name="datePickerDialogButtonBar" parent="Widget.Goharshad.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gs_on_primary</item>
        <item name="rippleColor">@color/gs_date_picker_ripple_color</item>
    </style>

    <style name="timePickerHeaderTextAppearance" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/gs_text_color_primary_inverse</item>
    </style>

    <!-- Filters -->
    <!-- Easier to extend Chip.Choice because it includes some desired color effects. -->
    <style name="Widget.Goharshad.FilterChip" parent="Widget.Goharshad.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/TextAppearance.Goharshad.FilterChip.Selectable
        </item>
        <item name="chipBackgroundColor">@color/gs_color_surface</item>
        <item name="chipIcon">@drawable/asld_chip_icon</item>
        <item name="chipIconVisible">true</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="textStartPadding">0dp</item>
    </style>

    <style name="Widget.Goharshad.FilterChip.Selectable">
        <item name="android:checkable">true</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="TextAppearance.Goharshad.FilterChip.Selectable" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Active filters show a close shortcut and no checkmark. -->
    <style name="Widget.Goharshad.FilterChip.Closeable">
        <item name="android:checkable">false</item>
        <item name="chipIcon">@drawable/chip_dot</item>
        <item name="closeIcon">@drawable/ic_filter_clear</item>
        <item name="android:closeIcon">@drawable/ic_filter_clear</item>
        <item name="closeIconTint">@color/brick_red</item>
        <item name="closeIconVisible">true</item>
        <item name="textEndPadding">2dp</item>
    </style>

    <style name="Widget.Goharshad.FilterChip.Applied" parent="Widget.Goharshad.FilterChip.Closeable">
        <item name="android:checkable">false</item>
        <item name="chipIcon">@drawable/chip_dot</item>
        <item name="closeIcon">@drawable/ic_filter_clear</item>
        <item name="android:closeIcon">@drawable/ic_filter_clear</item>
        <item name="closeIconTint">@color/brick_red</item>
        <item name="closeIconVisible">true</item>
        <item name="textEndPadding">2dp</item>
    </style>

    <style name="Widget.Goharshad.Filter.Button.Filter" parent="Widget.Goharshad.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="strokeColor">@color/border_selector_toggle</item>
        <item name="android:textColor">@color/text_selector_toggle</item>
        <item name="backgroundTint">@color/button_selector_toggle</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="background">@color/gs_primary</item>
    </style>

    <style name="ShapeAppearanceRoundRight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">@dimen/radius_medium</item>
        <item name="cornerSizeTopRight">@dimen/radius_medium</item>
    </style>

    <style name="ShapeAppearanceRoundLeft">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/radius_medium</item>
        <item name="cornerSizeTopLeft">@dimen/radius_medium</item>
    </style>

    <style name="Widget.Goharshad.Filter.TextInputEditText" parent="Widget.Goharshad.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:minHeight">58dp</item>
        <item name="android:textColor">@color/gs_primary</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
    </style>

    <style name="Widget.Goharshad.Filter.TextInputEditText.PositiveDigitsWithSeparator">
        <item name="android:digits">0123456789,</item>
        <item name="android:inputType">number</item>
        <item name="android:textDirection">ltr</item>
    </style>

    <style name="Widget.Goharshad.Filter.TextInputLayout" parent="Widget.Goharshad.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:background">@drawable/text_input_layout_background</item>
        <item name="boxStrokeColor">@color/darker_gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_medium</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="helperTextTextColor">?colorSecondary</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.Goharshad.Filter.Helper</item>
        <item name="errorTextAppearance">@style/TextAppearance.Goharshad.Filter.Error</item>
    </style>

    <style name="TextAppearance.Goharshad.Filter.Helper" parent="TextAppearance.Design.HelperText">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextAppearance.Goharshad.Filter.Error" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="Widget.Goharshad.Filter.TextInputLayout.WithoutBackground">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Goharshad.Filter.TextInputEditText.UnWritable">
        <item name="android:cursorVisible">false</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/gs_secondary</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.Goharshad.Filter.Chip.WithToggle" parent="Widget.Goharshad.MaterialComponents.Chip.Action">
        <item name="android:checkable">true</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="checkedIcon">@drawable/selector_checkbox</item>
        <item name="chipIcon">@drawable/selector_checkbox</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipCornerRadius">@dimen/radius_medium</item>
        <item name="chipStrokeColor">@color/text_input_layout_color</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="Widget.Goharshad.Submit.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="strokeColor">@color/gs_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/gs_secondary</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="Goharshad.MaterialComponents.TextButton.AddTask" parent="@style/Goharshad.MaterialComponents.TextButton">
        <item name="android:clickable">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/pink_swan</item>
        <item name="iconTint">@color/pink_swan</item>
        <item name="rippleColor">@color/darker_gray</item>
    </style>

</resources>